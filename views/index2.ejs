<%- include("partials/header.ejs") %>


 <div class="date">Work List</div>
  <div class="todo-app">
    <div class="wrapper">
      <form action="/work" method="POST">
        <input
          id="input-box"
          type="text"
          name="newTask"
          placeholder="Add your task..."
          autocomplete="off"
          required="required"
        />
        <button type="submit" class="add-btn">
          <img src="images/right-arrow.svg" height="25" />
        </button>
      </form>
    </div>
    <div class="list">
      <ul>
       
        <li class="task-box">
          <input type="checkbox" id="item1">
          <label for="item1"  class="task">Develop a new feature.</label>
        </li>
          <% for(var i = 0; i < tasks.length; ++i) {  %>
        <li class="task-box">
          <input type="checkbox" id=<%=tasks[i] %> />
          <label for=<%=tasks[i] %> class="task"><%=tasks[i] %></label>
        </li>
        <% }; %>
       
      </ul>
    </div>
  </div>



